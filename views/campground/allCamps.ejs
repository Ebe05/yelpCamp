<% layout("./boilerplate.ejs") %>
    <h1 class="text-center my-3">Campgrounds</h1>
    <main class="container">
        <% for(camp of allCamps) {%>
            <div class="card d-inline-flex m-3 pb-0" style="width: 18rem;">
                <% if(camp.images.length) {%>
                    <img src="<%=camp.images[0].url%>" class="card-img-top">
                    <% } %>
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= camp.title %>
                            </h5>
                            <p class="card-text">
                                <%= camp.location %>
                            </p>
                            <p class="mb-0">
                                <a href="/campgrounds/<%= camp._id %> ">
                                    <button class="btn btn-primary">
                                        View
                                    </button>
                                </a>
                            </p>
                        </div>
            </div>
            <% } %>
    </main>